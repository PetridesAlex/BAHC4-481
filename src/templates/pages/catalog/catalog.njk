{% set title = "Catalog" %}
{% set cssFile = "catalog.css" %}

{% block content %}
  <section class="catalog-header">
    <div class="catalog-header__content">
      <h1 class="catalog-header__title">
        Explore Top <span class="highlight">UI Kits</span> Design Assets
      </h1>
    </div>
    <div class="catalog-header__background"></div>
  </section>

  <main class="catalog-main">
    <aside class="catalog-sidebar">
      <section class="filter-section">
        <h3>Categories</h3>
        <ul class="filter-list">
          <li><input type="radio" name="category" checked /> All Categories</li>
          <li><input type="radio" name="category" /> Technology</li>
          <li><input type="radio" name="category" /> Travel & Tourism</li>
          <li><input type="radio" name="category" /> Health & Fitness</li>
          <li><input type="radio" name="category" /> E-Commerce</li>
          <li><input type="radio" name="category" /> Education</li>
          <li><input type="radio" name="category" /> Entertainment</li>
          <li><input type="radio" name="category" /> Others</li>
        </ul>

        <h3>Format Type</h3>
        <ul class="filter-list">
          <li><input type="checkbox" /> Figma</li>
          <li><input type="checkbox" /> Sketch</li>
          <li><input type="checkbox" /> Adobe XD</li>
          <li><input type="checkbox" /> Photoshop</li>
          <li><input type="checkbox" /> Illustrator</li>
        </ul>

        <h3>Style</h3>
        <ul class="filter-list">
          <li><input type="radio" name="style" /> Minimalist</li>
          <li><input type="radio" name="style" /> Modern</li>
          <li><input type="radio" name="style" /> Playful</li>
          <li><input type="radio" name="style" /> Dark Mode</li>
          <li><input type="radio" name="style" /> Photorealistic</li>
        </ul>

        <h3>Price</h3>
        <div class="price-range">
          <input type="range" min="0" max="50" value="25" />
          <p>€5 – €50</p>
        </div>

        <button class="clear-filters">Clear all filters</button>
      </section>
    </aside>

    <section class="catalog-content">
      <div class="catalog-controls">
        <div class="catalog-controls__left">
          <select class="sort-select">
            <option>Best Seller</option>
          </select>
          <div class="filter-tags">
            <button class="tag-button">UI Kit x</button>
            <button class="tag-button">UI Kit x</button>
          </div>
        </div>
        <div class="catalog-controls__right">
          <span class="results-count">Showing 12 out of 120 results</span>
          <div class="view-toggle">
            <button class="view-btn">
              <img src="/src/images/static/Icon/catalogfilterbtn.svg" alt="Grid View" />
            </button>
            <button class="view-btn">
              <img src="/src/images/static/Icon/catalog2filterbtn.svg" alt="List View" />
            </button>
          </div>
        </div>
      </div>

      <div class="catalog-grid">
        <article class="product-card sold-out">
          <img src="/src/images/static/card1.webp" alt="Lens Chronicles" />
        </article>
        <article class="product-card new">
          <img src="/src/images/static/card2.webp" alt="Career Success" />
        </article>
        <article class="product-card popular">
          <img src="/src/images/static/card3.webp" alt="Dream Homes" />
        </article>
        <article class="product-card popular">
          <img src="/src/images/static/card4.webp" alt="Foodish Catering" />
        </article>
        <article class="product-card">
          <img src="/src/images/static/card5.webp" alt="Caring Hearts" />
        </article>
        <article class="product-card sold-out">
          <img src="/src/images/static/card6.webp" alt="Gaming Rise" />
        </article>
        <article class="product-card sold-out">
          <img src="/src/images/static/card7.webp" alt="Edit Pro" />
        </article>
        <article class="product-card new">
          <img src="/src/images/static/card8.webp" alt="Banking Redefined" />
        </article>
        <article class="product-card popular">
          <img src="/src/images/static/card9.webp" alt="Exploring Fun" />
        </article>
        <article class="product-card popular">
          <img src="/src/images/static/card10.webp" alt="Admin Dashboard" />
        </article>
        <article class="product-card new">
          <img src="/src/images/static/card11.webp" alt="Analytical Dashboard" />
        </article>
        <article class="product-card sold-out">
          <img src="/src/images/static/card12.webp" alt="Kindergarten" />
        </article>
      </div>

      <div class="load-more-wrapper">
        <button class="load-more-button">Load more</button>
      </div>
    </section>
  </main>
{% endblock %}
