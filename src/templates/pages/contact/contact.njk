{% set title = "Contact" %}
{% set cssFile = "contact.css" %}

{% block content %}
<section class="contact">
  <div class="container">
    <div class="contact-content">
      <!-- Left Column: Contact Info -->
      <div class="contact-info">
        <span class="section-label">Contact</span>
        <h2 class="contact-title">Get in Touch with Us</h2>
        <p class="contact-description">
          We are here to help you navigate your creative journey. Reach out
          for any questions, support, or feedback.
        </p>
        <a href="#" class="btn">Shop Now</a>

        <ul class="contact-details">
          <li><img src="/src/images/static/Icon/phone.svg" alt="" /> +1 (555) 123-4567</li>
          <li><img src="/src/images/static/Icon/mail.svg" alt="" /> support@pixmart.com</li>
          <li><img src="/src/images/static/Icon/Icon.svg" alt="" /> Monday to Friday: 9 AM - 5 PM EST</li>
        </ul>

        <div class="map">
          <img src="/src/images/static/Location.webp" alt="Map showing PixMart HQ" />
          <div class="map-label">
            <strong>PixMart HQ</strong><br />
            123 Creative Ave, Design City, 45678
          </div>
        </div>
      </div>

      <!-- Right Column: Contact Form -->
      <div class="contact-form">
        <form>
          <div class="form-group">
            <label>Full Name</label>
            <input type="text" placeholder="Amelia Robert Johnson" required />
          </div>
          <div class="form-group">
            <label>Email Address</label>
            <input type="email" placeholder="amelia.robertjohnson@pixmart.com" required />
          </div>
          <div class="form-group">
            <label>Subject</label>
            <select>
              <option>General Inquiry</option>
              <option>Support</option>
              <option>Partnership</option>
            </select>
          </div>
          <div class="form-group">
            <label>Message</label>
            <textarea placeholder="Enter your message..." rows="5"></textarea>
          </div>
          <div class="form-options">
            <label><input type="checkbox" /> Subscribe to Newsletter</label><br />
            <label><input type="checkbox" required /> I have read the User & Privacy Policy</label>
          </div>
          <button type="submit" class="btn">Send Message</button>
        </form>
      </div>
    </div>
  </div>
</section>
{% endblock %}
