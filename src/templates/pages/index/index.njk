{% set title = "Homepage | Pixmart – Premium Digital Assets" %}
{% set cssFile = "index.css" %}

{% block content %}
<main class="main">
  <!-- HERO Section -->
  <div class="intro__wrapper">
    <div class="intro__content">
      <h1 class="title">
        Craft Your Success with Our
        <span class="title__color">Digital</span> Assets
      </h1>
      <p>
        From our inspiring illustrations to dynamic UI/UX kits, elevate
        your projects with our premium digital design resources.
      </p>
      <div class="primary__button">
        <button class="shop-now">Shop Now</button>
        <button class="primary__button primary__button--secondary">
          <img src="/src/images/static/Icon/play-icon.svg" alt="" class="button-icon" />
          Watch About Us
        </button>
      </div>
    </div>

    <div class="intro__image">
      <img class="intro__img" src="/src/images/static/heroimg.webp" alt="Main Preview" />
    </div>
  </div>

  <!-- PRODUCT CATEGORIES -->
  <section class="Product-section">
    <div class="product-section__categories">
      {% for icon, label in [
        ["ui kits.svg", "UI Kits"],
        ["social-media.svg", "Social Media"],
        ["presentation.svg", "Presentation"],
        ["Fonts.svg", "Fonts"],
        ["illustrations.svg", "Illustrations"]
      ] %}
        <div class="product-section__items">
          <div class="product-section__icon-box">
            <img class="product-section__image" src="/src/images/static/Icon/{{ icon }}" alt="{{ label }}" />
          </div>
          <p class="product-section__description">{{ label }}</p>
        </div>
      {% endfor %}
    </div>
  </section>

  <!-- CATEGORIES -->
  <section class="categories-section">
    <div class="categories-section__wrapper">
      <div class="categories__left">
        {% for icon, title, sub in [
          ["desktop.svg", "Templates", "For all needs • Modern"],
          ["phone.svg", "Slides", "Pitch-ready • Creative"],
          ["slides.svg", "App Icons", "High-quality • Elegant"],
          ["paint.svg", "Design Tools", "Easy to use • Unique"]
        ] %}
          <div class="category-box{% if loop.index == 3 %} highlight{% endif %}">
            <img src="/src/images/static/Icon/{{ icon }}" alt="{{ title }}" class="category-icon">
            <h4 class="category-title">{{ title }}</h4>
            <p class="category-sub">{{ sub }}</p>
          </div>
        {% endfor %}
      </div>

      <div class="categories__right">
        <span class="categories__tag">CATEGORIES</span>
        <h2 class="categories__heading">Discover Assets for Every Projects</h2>
        <p class="categories__description">
          From fonts and icons to mockups and templates, our comprehensive categories ensure that you find exactly what you need to your projects.
        </p>
        <button class="categories__button">Shop Now</button>
      </div>
    </div>
  </section>

  <!-- POPULAR PRODUCTS -->
  <section class="popular-products">
    <div class="container">
      <div class="products__header">
        <p>Trending</p>
        <div class="products__title-row">
          <h2 class="products__title">Popular Products</h2>
          <div class="products__buttons">
            <button class="button-arrow"><</button>
            <button class="button-arrow">></button>
          </div>
        </div>
      </div>
      <ul class="product__list">
        {% for n in [1, 2, 3, 4] %}
          <li class="product-card">
            <img class="product__image" src="/src/images/static/homepage-card{{ n }}.webp" alt="Product preview {{ n }}" />
          </li>
        {% endfor %}
      </ul>
    </div>
  </section>

  <!-- PRICING -->
  <section class="pricing-section">
    <div class="pricing__header">
      <p class="pricing__tag">Pricing Plan</p>
      <h2 class="pricing__title">Choose The Perfect Plan for Creative Potential</h2>
    </div>

    <div class="pricing__plans">
      {% set plans = [
        {
          title: "Standard Membership",
          price: "€14.99",
          features: [
            "Enhanced Resource Access",
            "Monthly Credits",
            "Priority Customer Support",
            "Community Features Access"
          ]
        },
        {
          title: "Plus Membership",
          price: "€29.99",
          badge: "Best Seller",
          highlighted: true,
          features: [
            "All Standard Benefits",
            "Increased Monthly Credits",
            "Early Access to New Releases",
            "Member-Only Offers"
          ]
        },
        {
          title: "Pro Membership",
          price: "€49.99",
          features: [
            "All Plus Benefits",
            "Unlimited Downloads",
            "Custom Licensing",
            "Direct Creator Collaboration"
          ]
        }
      ] %}

      {% for plan in plans %}
        <div class="plan{% if plan.highlighted %} plan--highlighted{% endif %}">
          {% if plan.badge %}
            <span class="badge">{{ plan.badge }}</span>
          {% endif %}
          <h3 class="plan__title">{{ plan.title }}</h3>
          <p class="plan__price">{{ plan.price }} <span>/Month</span></p>
          <ul class="plan__features">
            {% for feature in plan.features %}
              <li>{{ feature }}</li>
            {% endfor %}
          </ul>
          <button class="plan__button{% if plan.highlighted %} plan__button--blue{% endif %}">Subscribe</button>
        </div>
      {% endfor %}
    </div>
  </section>

  <!-- FAQ -->
  <section class="faq">
    <div class="faq__wrapper">
      <div class="faq__intro">
        <span class="faq__tag">FAQ</span>
        <h2 class="faq__title">Answers to Your Questions</h2>
        <button class="faq__button">Ask Us A Question</button>
      </div>

      <div class="faq__accordion">
        <details class="faq__item"><summary class="faq__question">Can I request a refund?</summary></details>
        <details class="faq__item faq__item--open" open>
          <summary class="faq__question">How do I access my purchased products?</summary>
          <div class="faq__answer">
            Log in to your account, go to "My Purchases" and download all your products.
          </div>
        </details>
        <details class="faq__item"><summary class="faq__question">Are there any discounts for bulk purchases?</summary></details>
        <details class="faq__item"><summary class="faq__question">What payment methods do you accept here?</summary></details>
        <details class="faq__item"><summary class="faq__question">Can I sell my digital products on this marketplace?</summary></details>
      </div>
    </div>
  </section>

  <!-- BLOG -->
  <section class="blog-section">
    <div class="blog__header">
      <h2 class="blog__title">Latest Expert</h2>
      <a href="#" class="blog__link">Explore All Articles ›</a>
    </div>

    <div class="blog-grid">
      {% for blog in [
        { image: "Creative-blog.webp", title: "Creative Blog", date: "15 April 2024" },
        { image: "best-Dishes.webp", title: "Best Dishes", date: "5 May 2024" }
      ] %}
        <div class="blog-item">
          <div class="blog-card">
            <img src="/src/images/static/{{ blog.image }}" alt="{{ blog.title }}" class="blog__image" />
          </div>
          <h3 class="blog-card__title">{{ blog.title }}</h3>
          <p class="blog-card__date">{{ blog.date }}</p>
        </div>
      {% endfor %}
    </div>
  </section>
</main>
{% endblock %}
